{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve", // or "react-jsx" if using Solid's JSX transform
    "jsxImportSource": "solid-js",
    "paths": {
      "@/*": ["./src/*"] // Example alias for the 'src' directory
    }
  },
  "exclude": ["node_modules/*", ".vite/*", "public/*"]
}
