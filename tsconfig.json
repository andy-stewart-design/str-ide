{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve", // or "react-jsx" if using Solid's JSX transform
    "jsxImportSource": "solid-js",
    "paths": {
      "@/*": ["./src/*"] // Example alias for the 'src' directory
    }
  }
}
